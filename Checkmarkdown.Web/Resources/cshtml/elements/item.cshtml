@using Checkmarkdown.Core.Elements;
@using Checkmarkdown.Web

@inherits RazorLight.TemplatePage<Item>;
@model Item;

@{ var tagName = Model.IsHeading ? "section" : "article"; }

<@tagName @Model.HtmlAttributes()>
    <header>
        @{ await IncludeAsync("element.cshtml", Model?.Title); }
    </header>
    <div class="content">
        @{ await IncludeAsync("elements.cshtml", Model?.Content); }
    </div>
</@tagName>
